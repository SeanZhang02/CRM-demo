# CRM System Environment Variables
# Copy this file to .env.local (for Next.js) and .env (for backend)

# Database Configuration
DATABASE_URL="postgresql://crm_user:crm_password@localhost:5432/crm_development"
POSTGRES_DB=crm_development
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=redis_password

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# JWT and Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3000

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_password
MINIO_BUCKET_NAME=crm-files
MINIO_USE_SSL=false

# Email Configuration (Development - Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@crm.local

# Email Configuration (Production - Example with SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=your-verified-sender@yourdomain.com

# OAuth Configuration (Gmail Integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# OAuth Configuration (Microsoft/Outlook Integration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/auth/callback/microsoft

# Calendar Integration
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
MICROSOFT_GRAPH_API_KEY=your-microsoft-graph-api-key

# Accounting Software Integration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret

# Analytics and Monitoring
SENTRY_DSN=your-sentry-dsn
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Feature Flags
ENABLE_EMAIL_TRACKING=true
ENABLE_CALENDAR_SYNC=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_OFFLINE_MODE=false
ENABLE_PWA=true

# Development Tools
LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true
ENABLE_API_DOCS=true
SWAGGER_UI_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TOLERANCE=300

# Performance and Scaling
MAX_FILE_SIZE=10485760
MAX_USERS_PER_ACCOUNT=50
API_TIMEOUT=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Testing
TEST_DATABASE_URL="postgresql://crm_user:crm_password@localhost:5432/crm_test"
TEST_REDIS_URL="redis://localhost:6379/1"
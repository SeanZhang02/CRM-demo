# CRM System Production Environment Variables
# This file contains production environment variable templates
# NEVER commit actual production secrets to version control

# ============================================================================
# DATABASE CONFIGURATION - SUPABASE
# ============================================================================
# Supabase Production Database (Replace with your actual Supabase credentials)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres"

# Alternative: Vercel Postgres
# DATABASE_URL="postgres://default:[PASSWORD]@[HOST]-pooler.us-east-1.postgres.vercel-storage.com/verceldb?sslmode=require"
# POSTGRES_URL_NON_POOLING="postgres://default:[PASSWORD]@[HOST].us-east-1.postgres.vercel-storage.com/verceldb?sslmode=require"

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=[GENERATE_RANDOM_32_CHAR_STRING]
JWT_SECRET=[GENERATE_RANDOM_32_CHAR_STRING]

# ============================================================================
# VERCEL DEPLOYMENT CONFIGURATION
# ============================================================================
VERCEL_URL=your-domain.vercel.app
VERCEL_ENV=production
VERCEL_REGION=iad1

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================
# Error Tracking
SENTRY_DSN=https://[key]@[org].ingest.sentry.io/[project]
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Health Check Configuration
HEALTH_CHECK_SECRET=[GENERATE_RANDOM_STRING]

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Session Configuration
SESSION_SECRET=[GENERATE_RANDOM_32_CHAR_STRING]
SESSION_MAX_AGE=86400000

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com

# ============================================================================
# FILE STORAGE - VERCEL BLOB
# ============================================================================
BLOB_READ_WRITE_TOKEN=[VERCEL_BLOB_TOKEN]
BLOB_STORE_ID=[VERCEL_BLOB_STORE_ID]

# ============================================================================
# EMAIL CONFIGURATION - SENDGRID
# ============================================================================
SENDGRID_API_KEY=[SENDGRID_API_KEY]
SMTP_FROM=noreply@your-domain.com
EMAIL_TEMPLATES_ENABLED=true

# ============================================================================
# FEATURE FLAGS (Production)
# ============================================================================
ENABLE_EMAIL_TRACKING=true
ENABLE_CALENDAR_SYNC=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_OFFLINE_MODE=false
ENABLE_PWA=true
ENABLE_API_DOCS=false
SWAGGER_UI_ENABLED=false

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=10485760
API_TIMEOUT=30000
CONNECTION_POOL_SIZE=5
CONNECTION_TIMEOUT=30000

# ============================================================================
# BACKUP AND DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true

# ============================================================================
# COMPLIANCE AND SECURITY SCANNING
# ============================================================================
SECURITY_SCANNING_ENABLED=true
COMPLIANCE_MODE=SOC2
GDPR_COMPLIANCE=true

# ============================================================================
# INTEGRATION CONFIGURATION (Optional)
# ============================================================================
# Google OAuth (for future email integration)
GOOGLE_CLIENT_ID=[GOOGLE_CLIENT_ID]
GOOGLE_CLIENT_SECRET=[GOOGLE_CLIENT_SECRET]
GOOGLE_REDIRECT_URI=https://your-domain.vercel.app/api/auth/callback/google

# Microsoft OAuth (for future Outlook integration)
MICROSOFT_CLIENT_ID=[MICROSOFT_CLIENT_ID]
MICROSOFT_CLIENT_SECRET=[MICROSOFT_CLIENT_SECRET]
MICROSOFT_REDIRECT_URI=https://your-domain.vercel.app/api/auth/callback/microsoft
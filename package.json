{
  "name": "desktop-crm-mvp",
  "version": "1.0.0",
  "description": "Desktop-first visual CRM system for small businesses - 6-week MVP",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "test:load": "artillery run tests/load/artillery-config.yml",
    "test:security": "npm audit --audit-level high && node scripts/security-scan.js",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:performance",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup": "npm install && npm run docker:dev && sleep 5 && npm run db:setup",
    "db:setup": "npx prisma migrate dev && npx prisma db seed",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "clean": "rm -rf node_modules .next",
    "postinstall": "husky install",
    "infrastructure:test": "node scripts/test-infrastructure.js",
    "infrastructure:health": "curl -f $npm_config_url/api/health || echo 'Health check failed'",
    "infrastructure:metrics": "curl -f $npm_config_url/api/monitoring/metrics || echo 'Metrics check failed'",
    "deploy:production": "vercel --prod",
    "deploy:preview": "vercel",
    "security:audit": "npm audit --audit-level high",
    "security:check": "npm run infrastructure:test && npm run security:audit",
    "performance:test": "lighthouse $npm_config_url --output=json --output-path=./lighthouse-report.json",
    "monitoring:setup": "echo 'Setting up monitoring...' && npm run infrastructure:health"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.16.2",
    "@sentry/nextjs": "^10.12.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "react-window": "^1.8.8",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@eslint/eslintrc": "^3",
    "autoprefixer": "^10.4.16",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@playwright/test": "^1.51.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^7.0.0",
    "lighthouse": "^12.0.0",
    "artillery": "^2.0.20",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/visual-crm-system.git"
  },
  "keywords": [
    "crm",
    "visual",
    "small-business",
    "drag-drop",
    "typescript",
    "nextjs",
    "fastify",
    "postgresql"
  ],
  "author": "CRM Development Team",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
